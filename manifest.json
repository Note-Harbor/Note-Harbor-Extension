{
  "manifest_version": 3,
  "name": "Note Harbor",
  "description": "Note-taking Chrome extension that lets you compose stickies wherever you are on the browser.",
  "version": "0.5",
  "background": {
    "service_worker": "background.js"
  },
  "side_panel":{
    "default_path": "./pages/main.html"
  },
  "permissions": [
    "sidePanel",
    "contextMenus",
    "storage"
  ],
  "action": {
    "default_title": "Click to open panel"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": "Ctrl+Shift+L",
      "description": "Opens our glorious sidebar!"
    }
  }
}
